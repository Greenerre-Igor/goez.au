<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%- include('../../partials/head'); %>
</head>

<body>
    <%- include('../../partials/header'); %>

        <div class="page-content">
            <div class="row">
                <%- include('../../partials/sidebar'); %>
                <div class="col-md-10">
                    <div class="content-box-large">
                        <div class="panel-heading">
                            <div class="panel-title"><%= title %></div>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-6">
                                <div class="content-box-large">
                                    <div class="panel-heading">
                                    
                                      <!-- <div class="panel-options">
                                        <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                                        <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                                      </div> -->
                                  </div>
                                    <div class="panel-body">
                                        <form class="form-horizontal" role="form" method="post" action="/admin/testimonials/update">
                                        <input type="hidden" name="id" value="<%= testimonial._id %>" />
                                        <input type="hidden" name="_method" value="put" />
                                        <div class="form-group">
                                          <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                                          <div class="col-sm-10">
                                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%= testimonial.name %>">
                                          </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 control-label">Job Title</label>
                                            <div class="col-sm-10">
                                              <input type="text" class="form-control" id="job-title" name="job"  placeholder="Job Title" value="<%= testimonial.job %>">
                                            </div>
                                          </div>
                                        <div class="form-group">
                                          <label class="col-sm-2 control-label">Feedback</label>
                                          <div class="col-sm-10">
                                            <textarea class="form-control" placeholder="Textarea" name="feedback" rows="3"><%= testimonial.feedback %></textarea>
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <div class="col-sm-offset-2 col-sm-10">
                                            <button class="btn btn-success">Update</button>
                                            <a href="/admin/testimonials" class="btn btn-primary">Back</a>
                                          </div>
                                        </div>
                                      </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer'); %>
</body>

<%- include('../../partials/foot'); %>

</html>